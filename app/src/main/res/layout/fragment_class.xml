<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.gridlayout.widget.GridLayout

    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="10dp"
    android:background="@color/black"
    android:layout_height="0dp"
    app:columnCount="2"
    app:rowCount="3">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardElevation="0dp"

        app:cardCornerRadius="15dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView

                android:id="@+id/ivDongvatcovu"
                android:layout_width="120dp"
                android:layout_height="150dp"

                android:layout_centerInParent="true"
                android:src="@drawable/bufalo1">

            </ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="130dp"
                android:text="Động vật có vú ">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="55dp"
                android:layout_marginTop="145dp"
                android:text="Mammals">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/ivChim"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/birds">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Chim"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="130dp"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Birds"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="145dp"

                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/ivBosat"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/reptile">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Bò sát"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="130dp"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Reptile"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="145dp"

                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/ivCa"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fish">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Cá"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="130dp"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Fish"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="145dp"

                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/ivLuongcu"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/frog">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Lưỡng cư"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="130dp"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Amphibians"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="145dp"

                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        app:layout_rowWeight="1"
        app:layout_columnWeight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/ivKhongxuongsong"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/snail">

            </ImageView>
            <TextView

                android:layout_width="wrap_content"

                android:text="Không xương sống"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="130dp"

                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:text="Invertebrates"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="145dp"

                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>