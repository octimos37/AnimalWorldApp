<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orders.Order_amphibians">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/body"
        tools:context=".Order.InvertebratesActivity">


        <androidx.gridlayout.widget.GridLayout

            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:background="@color/body"
            android:layout_height="0dp"
            app:columnCount="2"
            app:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:cardElevation="0dp"

                app:cardCornerRadius="15dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/body"
                    >

                    <ImageView

                        android:id="@+id/ivEch"
                        android:layout_width="120dp"
                        android:layout_height="150dp"

                        android:layout_centerInParent="true"
                        android:src="@drawable/ech">

                    </ImageView>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="5dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/body"
                    >

                    <ImageView
                        android:id="@+id/ivKynhong"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/kynhong">

                    </ImageView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="5dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/body"
                    >

                    <ImageView
                        android:id="@+id/ivKhongchop"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/luongcukhongchop">

                    </ImageView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hinh_back"
         />

</FrameLayout>